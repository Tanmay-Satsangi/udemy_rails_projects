<h1>Create a new article</h1>

<!--To create form-->
<%= form_with scope: :article, url: articles_path, local: true do |f| %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>

  <p>
<!--    I think f.submit call the create method in article_controller because of form_with helper-->
    <%= f.submit %>
  </p>

<%end %>